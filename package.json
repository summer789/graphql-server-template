{
  "name": "graphql-server",
  "version": "0.0.1",
  "description": "Awesome project developed with TypeORM.",
  "scripts": {
    "start": "NODE_ENV=dev nodemon --exec ts-node --files src/index.ts",
    "test-server": "NODE_ENV=test ts-node --files src/index.ts",
    "test": "NODE_ENV=test jest --forceExit",
    "ci": "start-server-and-test test-server http://localhost:4000 test",
    "gen-schema-types": "gql2ts src/schema.graphql -o src/types/schema.d.ts"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/jest": "^26.0.4",
    "@types/node": "^14.0.14",
    "@types/yup": "^0.29.3",
    "gql2ts": "^1.10.1",
    "jest": "^26.1.0",
    "nodemon": "^2.0.4",
    "start-server-and-test": "^1.11.0",
    "ts-jest": "^26.1.1",
    "ts-node": "8.10.2",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.9.6"
  },
  "dependencies": {
    "@graphql-tools/graphql-file-loader": "^6.0.12",
    "@graphql-tools/load": "^6.0.12",
    "@graphql-tools/schema": "^6.0.12",
    "add": "^2.0.6",
    "bcryptjs": "^2.4.3",
    "cross-fetch": "^3.0.5",
    "graphql-request": "^2.0.0",
    "graphql-yoga": "^1.18.3",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "0.2.25",
    "yarn": "^1.22.4",
    "yup": "^0.29.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
